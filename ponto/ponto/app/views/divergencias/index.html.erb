<div class="container">
      <div class="row">
        <div>
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Divergências</h3>
              <div class="pull-right">
                <span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">  								
                  <i class="glyphicon glyphicon-filter"></i>  							
                </span>
              </div>
            </div>
            <div class="panel-body">
              <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Filter Tasks">
            </div>
            <table class="table table-hover" id="task-table">
              <thead>
                <tr>
                  <th>Funcionário</th>
                  <th>Setor</th>
                  <th>Data</th>
                  <th>Batidas</th>
                  <th>Saldo</th>
                  <th style="text-align:right">Op&ccedil;&otilde;es</th>
                </tr>
              </thead>
              <tbody>
                <% @divergencias.each do |d| %>
                <% d[1].each do |f| %>
                <tr class="<%= classe_dia(f, d[0]) %>">
                  <td><%= "##{f.id} #{f.nome}" %></td>
                  <td><%= f.setor.descricao %></td>
                  <td><%= d[0] %></td>
                  <td><%= batidas_formatado(f,d[0]) %></td>
                  <td style="<%= saldo_dia(f,d[0]) >= 0 ? 'color:green' : 'color:red' %>"><%= hora_formatada(saldo_dia(f, d[0])) %></td>
                  <td class="coluna_dir">
                    <a class="btn btn-primary btn-xs" title="Reconhecer" data-toggle="modal">                      
                      <span class="glyphicon glyphicon-thumbs-up"></span>                                      
                    </a>
                  </td>
                </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>