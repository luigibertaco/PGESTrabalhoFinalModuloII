<h1>Listing feriados</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feriados.each do |feriado| %>
      <tr>
        <td><%= feriado.descricao %></td>
        <td><%= feriado.data %></td>
        <td><%= link_to 'Show', feriado %></td>
        <td><%= link_to 'Edit', edit_feriado_path(feriado) %></td>
        <td><%= link_to 'Destroy', feriado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feriado', new_feriado_path %>
