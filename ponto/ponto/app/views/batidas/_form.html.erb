<%= form_for(@batida) do |f| %>
  <% if @batida.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@batida.errors.count, "error") %> prohibited this batida from being saved:</h2>

      <ul>
      <% @batida.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3><%= @batida.data %> - <%= @batida.funcionario.nome %></h3>
  </div>
  <%= f.hidden_field :data, value: @batida.data %>
  <%= f.hidden_field :funcionario_id, value: @batida.funcionario_id %>
  <div class="field">
    <%= f.label :hora %><br>
    <%= f.time_select :hora %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br>
<%= link_to 'Voltar', {controller: 'inconsistencias', action: 'ajustar', funcionario: @batida.funcionario, data: @batida.data}, method: :post %>