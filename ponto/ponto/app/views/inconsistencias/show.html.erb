<table>
  <thead>
    <tr>
      <th>Funcionario</th>
      <th>Data</th>
      <th>Hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batidas.each do |batida| %>
      <tr>
        <td><%= batida.funcionario.nil? ? '' : batida.funcionario.nome %></td>
        <td><%= batida.data %></td>
        <td><%= batida.hora %></td>
        <td><%= link_to 'Alterar', edit_batida_path(batida) %></td>
        <td><%= link_to 'Excluir', batida, method: :delete, data: { confirm: 'Deseja deletar a batida?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Batida', new_batida_path %>
